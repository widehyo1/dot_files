" colorscheme
set t_Co=256
colorscheme desert

" basic config
set number
set showmatch
set smartindent
set tabstop=4
set shiftwidth=4
set expandtab
set noswapfile
set clipboard=unnamedplus
set hlsearch
set incsearch
set splitright
set splitbelow
set showcmd
set autoread
set cursorline
set list
set listchars=tab:>-,trail:«,space:␣,lead:»
set showtabline=2

source ~/.vim/keymaps.vim
